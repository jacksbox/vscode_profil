{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "server/*": [
        "app/server/*",
        "app/server/*/index.js",
        "app/server/*.js"
      ],
      "shared/*": [
        "app/shared/*",
        "app/shared/*/index.js",
        "app/shared/*.js"
      ],
      "views/*": [
        "app/views/*",
        "app/views/*/index.js",
        "app/views/*.js"
      ]
    },
  },
  "exclude": [
    ".circleci",
    ".deployment",
    ".docker",
    ".loki",
    ".summon",
    ".vscode",
    "app/.build",
    "**/__tests__",
    "coverage",
    "dist",
    "node_modules",
    "npm_packages-offline-cache",
    "sassdoc",
    "storybook-static"
  ]
}